# Config files
alias al='$EDITOR ~/dev/dotfiles/.zsh/alias'
alias fu='$EDITOR ~/dev/dotfiles/.zsh/functions'
alias zshconf='$EDITOR ~/.zshrc'
alias vconf='$EDITOR ~/.vimrc'
alias tmconf='$EDITOR ~/.tmux.conf'
alias fishconf='$EDITOR ~/.config/fish/config.fish'
alias i3conf='$EDITOR ~/.config/i3/config'
alias i3sconf='$EDITOR ~/.config/i3status/config'
alias tconf='$EDITOR ~/.config/termite/config'
alias dotfiles='cd ~/dev/dotfiles'
alias dnsconf='sudo vim /etc/resolv.conf'

# System
#alias update='sudo apt-get update && sudo apt-get upgrade -y'
alias update='sudo pacman -Syu'
alias off='shutdown -h now'
alias p='sudo pacman -Sy'
alias y='yaourt -Sy'
alias x='exit'

# WIFI
alias wr='sudo systemctl restart netctl-auto@wlp4s0b1.service'
alias wd='sudo systemctl restart dhcpcd.service'
alias wds='sudo systemctl status dhcpcd.service | grep wlp4s0b1'
alias ws='systemctl status netctl-auto@wlp4s0b1.service'
alias wa='netctl-auto current'
alias wl='netctl-auto list'
alias wm='sudo wifi-menu wlp4s0b1'
alias wi='curl ipinfo.io'

alias hosts='$EDITOR /etc/hosts'
alias reload='. ~/.zshrc'
alias lsa='ls -Ah'
alias lla='ls -lAh'
alias cls='clear'
alias ..='cd ..'
alias ...='cd ../..'
alias vimstall='vim +PluginInstall +qall'

# Tmux
alias tma='tmux a -t'
alias tmk='tmux kill-session -t'
alias tms='mux start'
alias tml='tmux ls'

# Docker
alias d='docker'
alias dps='d ps'
alias dpsa='d ps -a'
alias ds='d start'
alias dr='d run'

# Git
alias g='git'
alias ga='git add'
alias gaa='git add -A'
alias gap='git add -p'
alias gb='git branch'
alias gca='git commit --amend --no-edit'
alias gcd='git checkout develop'
alias gcm='git checkout master'
alias gcmsg='git commit -m'
alias gco='git checkout'
alias gcob='git checkout -b'
alias gcp='git cherry-pick'
alias gcpn='git cherry-pick --no-commit'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdm='git diff master'
alias gdr='git diff origin/$(git rev-parse --abbrev-ref HEAD)'
alias gl='git log --pretty=format:"%ad | %C(yellow)%h%C(reset) | %an | %C(blue)%s%C(reset) (%ar)" --date="short"'
alias gmd='git merge develop'
alias gpl='git pull'
alias gplr='git pull --rebase'
alias gps='git push'
alias gpsa='git push --all'
alias gpsf='git push --force'
alias gpsu='git push -u origin $(git rev-parse --abbrev-ref HEAD)'
alias gr='git reset'
alias grc='git rebase --continue'
alias grd='git rebase develop'
alias grh='git reset HEAD~'
alias grs='git rebase --skip'
alias gs='git status'
alias gst='git stash'
alias gstp='git stash pop'
