# Config files
alias al='$EDITOR ~/dev/dotfiles/.zsh/alias'
alias fu='$EDITOR ~/dev/dotfiles/.zsh/functions'
alias zshconf='$EDITOR ~/.zshrc'
alias vconf='$EDITOR ~/.vimrc'
alias tmconf='$EDITOR ~/.tmux.conf'
alias fishconf='$EDITOR ~/.config/fish/config.fish'
alias i3conf='$EDITOR ~/.config/i3/config'
alias i3sconf='$EDITOR ~/.config/i3status/config'
alias tconf='$EDITOR ~/.config/termite/config'
alias dotfiles='cd ~/dev/dotfiles'
alias dnsconf='sudo vim /etc/resolv.conf'
alias rconf='sudo vim /boot/efi/EFI/refind/refind.conf'
alias ngconf='sudo vim /etc/nginx/nginx.conf'

# System
#alias update='sudo apt-get update && sudo apt-get upgrade -y'
alias update='sudo packer -Syu'
alias off='shutdown -h now'
alias p='packer -S --noedit --noconfirm'
alias y='yaourt -Sy'
alias x='exit'
alias q='exit'
alias upp='sudo pacman -Syu'
alias upa='packer -Syu --noedit --auronly'
alias ups='$DOTFILES/update.sh'
alias yy='xclip -sel clip <'

# WIFI
alias wr='sudo systemctl restart netctl-auto@wlp4s0.service'
alias wd='sudo systemctl restart dhcpcd.service'
alias wds='sudo systemctl status dhcpcd.service -l | grep wlp4s0'
alias ws='systemctl status netctl-auto@wlp4s0.service'
alias wa='netctl-auto current'
alias wl='netctl-auto list'
alias wm='sudo wifi-menu wlp4s0'
alias wi='curl ipinfo.io'

alias hosts='$EDITOR /etc/hosts'
alias reload='. ~/.zshrc'
alias las='ls -lAH --group-directories-first'
alias la='ls -lAh --group-directories-first'
alias cls='clear'
alias ..='cd ..'
alias ...='cd ../..'
alias vimstall='vim +PluginInstall +qall'

# Tmux
alias tma='tmux a -t'
alias tmk='tmux kill-session -t'
alias tms='mux start'
alias tml='tmux ls'

# Docker
alias d='docker'
alias dc='docker-compose'
alias dps='d ps'
alias dpsa='d ps -a'
alias ds='d start'
alias dr='d run'
alias da='d attach'
alias dip='docker inspect --format "{{ .NetworkSettings.IPAddress }}" ${CID}'

# Git
alias g='git'
alias ga='git add'
alias gaa='git add -A'
alias gap='git add -p'
alias gb='git branch'
alias gca='git commit --amend --no-edit'
alias gcd='git checkout develop'
alias gcm='git checkout master'
alias gcmsg='git commit -m'
alias gco='git checkout'
alias gcob='git checkout -b'
alias gcp='git cherry-pick'
alias gcpc='git cherry-pick --continue'
alias gcpn='git cherry-pick --no-commit'
alias gd='git diff'
alias gdc='git diff --cached'
alias gdm='git diff master'
alias gdl='git diff HEAD^ HEAD'
alias gdr='git diff origin/$(git rev-parse --abbrev-ref HEAD)'
#alias gdp="git diff $(git rev-parse --abbrev-ref HEAD | sed -r 's/_(incorrect|secure)(_[0-2])?//g')"
alias gl='git log --pretty=format:"%ad | %C(yellow)%h%C(reset) | %an | %C(blue)%s%C(reset) (%ar)" --date="short"'
alias gld='gl master..$(git rev-parse --abbrev-ref HEAD)'
alias gmd='git merge develop'
alias gpl='git pull'
alias gplr='git pull --rebase'
alias gps='git push'
alias gpsa='git push --all -u'
alias gpsf='git push --force'
alias gpsu='git push -u origin $(git rev-parse --abbrev-ref HEAD)'
alias gr='git reset'
alias grc='git rebase --continue'
alias grd='git rebase develop'
alias grm='git rebase master'
#alias grp="git rebase --hard $(git rev-parse --abbrev-ref HEAD | sed -r 's/_(incorrect|secure)(_[0-2])?//g')"
alias grh='git reset HEAD~'
alias grs='git rebase --skip'
alias gs='git status'
alias gst='git stash'
alias gstp='git stash pop'

